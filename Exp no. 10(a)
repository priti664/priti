UIN. :  241P012

#include <stdio.h>

int main() {

    int a, b, sum;
    int *ptr1 = &a, *ptr2 = &b, *ptr3 = &sum;

    printf("Enter first number: ");
    scanf("%d", ptr1);
    printf("Enter second number: ");
    scanf("%d", ptr2);

    *ptr3 = *ptr1 + *ptr2;

    printf("The sum is: %d\n", sum);

    return 0;
}

/* Output: 

Enter first number: 8
Enter second number: 2
The sum is: 10

*/
