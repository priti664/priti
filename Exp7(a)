 #include<stdio.h>

int main(){

    int size;
    printf("Enter size of Square Matrix: ");
    scanf("%d",&size);

    int arr1[size][size], arr2[size][size], sumMatrix[size][size];

    printf("\nEnter Matrix 1: \n");
    for(int i=0;i<size; i++){

        for(int j=0; j<size; j++){

            printf("Enter a%d%d :",i+1,j+1);
            scanf("%d",&arr1[i][j]);

        }
    }

    printf("\nEnter Matrix 2: \n");
    for(int i=0;i<size;i++){

        for(int j=0; j<size; j++){

            printf("Enter a%d%d :",i+1,j+1);
            scanf("%d",&arr2[i][j]);

        }
    }

    for(int i=0; i<size; i++){
        for(int j=0; j<size; j++){
            
            sumMatrix[i][j]=arr1[i][j]+arr2[i][j];
            
        }
    }
    
    printf("\nSum Martix of 1 and 2 is\n");
    for(int i=0; i<size; i++){
        for(int j=0; j<size; j++){
            printf("a%d%d : %d\n",i+1,j+1,sumMatrix[i][j]);        
            
        }
    }

return 0;
}


